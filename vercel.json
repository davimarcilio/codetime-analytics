{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "headers": [
    {
      "source": "/graph",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=86400"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ],
  "crons": [
    {
      "path": "/updateDatabase",
      "schedule": "0 0 * * *"
    }
  ]
}
